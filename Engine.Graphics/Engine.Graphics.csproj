<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <RootNamespace>Engine</RootNamespace>

        <Title>3DEngine Vulkan Graphics</Title>
        <PackageId>3DEngine.Graphics</PackageId>
        <Version>1.0.0</Version>
        <Authors>CanTalat-Yakan</Authors>
        <Company>3DEngine</Company>
        <Description>3D Game Engine - Low-Level Vulkan Graphics Abstractions - .NET 10 - C# 14</Description>
        <PackageTags>3D;Game;Engine;.Net10;C#14;Vulkan;Graphics</PackageTags>
        <PackageIcon>3DEngineSymbol.png</PackageIcon>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/CanTalat-Yakan/3DEngine</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PublishToNuGet>true</PublishToNuGet>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <!-- Vulkan / SPIR-V dependencies located exclusively in Graphics layer -->
        <PackageReference Include="3DEngine.Debug" Version="1.0.1" />
        <PackageReference Include="Vortice.Mathematics" Version="1.9.3" />
        <PackageReference Include="Vortice.SPIRV" Version="1.0.4" />
        <PackageReference Include="Vortice.SpirvCross" Version="1.5.3" />
        <PackageReference Include="Vortice.Vulkan" Version="3.0.3" />
        <PackageReference Include="Vortice.VulkanMemoryAllocator" Version="1.6.3" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\Images\3DEngineSymbol.png" Link="Assets\3DEngineSymbol.png">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Include="..\README.md" Link="Assets\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

</Project>
