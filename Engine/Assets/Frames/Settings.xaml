<Frame
    x:Class="Frames.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Frames"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="20" Padding="50">
        <TextBlock FontSize="32" Text="Settings"/>

        <Grid/>

        <Expander HorizontalAlignment="Stretch">
            <Expander.Header>
                <StackPanel Padding="20" Spacing="20" Orientation="Horizontal">
                    <SymbolIcon Symbol="Globe"/>
                    <StackPanel>
                        <TextBlock Text="Project Settings" FontSize="18"/>
                        <TextBlock Text="Name, Window, Player, Graphics API"/>
                    </StackPanel>
                </StackPanel>
            </Expander.Header>
        </Expander>
    </StackPanel>
</Frame>
