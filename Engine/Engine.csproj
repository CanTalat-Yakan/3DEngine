    <PackageReference Include="Vortice.Direct2D1" Version="2.1.41" />
    <PackageReference Include="Vortice.Direct3D11" Version="2.1.41" />
    <PackageReference Include="Vortice.Direct3D12" Version="2.1.41" />
    <PackageReference Include="Vortice.DirectComposition" Version="2.1.41" />
    <PackageReference Include="Vortice.DirectInput" Version="2.1.41" />
