    <None Remove="Assets\Engine\Resources\Templates\Scripts.txt" />
    <None Remove="Assets\Engine\Resources\Templates\Shaders.txt" />
    <None Remove="Assets\Frames\Documentation.xaml" />
    <None Remove="Assets\Frames\Home.xaml" />
    <None Remove="Assets\Frames\Main.xaml" />
    <None Remove="Assets\Frames\Settings.xaml" />
  </ItemGroup>

  <ItemGroup>
