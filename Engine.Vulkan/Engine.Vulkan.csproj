<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>Engine</RootNamespace>

        <Title>3DEngine Vulkan</Title>
        <PackageId>3DEngine.Vulkan</PackageId>
        <Version>1.0.0</Version>
        <Authors>CanTalat-Yakan</Authors>
        <Company>3DEngine</Company>
        <Description>3D Game Engine - Vulkan - SDL3 - .NET 10 - C# 14</Description>
        <PackageTags>3D;Game;Engine;.Net10;C#14</PackageTags>
        <PackageIcon>3DEngineSymbol.png</PackageIcon>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/CanTalat-Yakan/3DEngine</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PublishToNuGet>true</PublishToNuGet>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Engine.Core\Engine.Core.csproj"/>
        <ProjectReference Include="..\Engine.ECS\Engine.ECS.csproj"/>
        <ProjectReference Include="..\Engine.Renderer\Engine.Renderer.csproj"/>
        <ProjectReference Include="..\Engine.Window\Engine.Window.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="..\Images\3DEngineSymbol.png" Link="Assets\3DEngineSymbol.png">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Include="..\README.md" Link="Assets\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

</Project>
